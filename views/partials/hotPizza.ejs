                                <option value="medium">Medium</option>
                                <option value="large">Large</option>
                              </select>
                        </div>	
                        
                    </div>
                    
                    <div class="d-block">
                        <p><%=item.description%></p>
                    </div>
                </div>
            </div>
            <%}); %>
        </div> 
    </div>
    </div>
</section>

